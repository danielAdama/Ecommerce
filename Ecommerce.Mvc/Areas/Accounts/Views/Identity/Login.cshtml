
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/Accounts/_LoginLayout.cshtml";
}

<div class="login">
    <div class = "text-center">
        <h1>Login</h1>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group was-validated">
                <label for="EmailAddress" class="control-label">Email Address</label>
                <input type="email" id="EmailAddress" for="EmailAddress" class="form-control" placeholder="janedoe@exmaple.com" required>
                <span validation-for="EmailAddress" class="text-danger"></span><i class="bi bi-check-circle"></i>
                <small id="loginEmailAddress"></small>
                <div class="invalid-feedback">
                    Please enter your Email Address
                </div>
            </div>
            <div class="form-group was-validated">
                <label for="PassWord" class="control-label">Password</label>
                <input type="password" id = "PassWord" for="PassWord" class="form-control" required>
               <span validation-for="PassWord" class="text-danger"></span>
                <small id="loginPassword"></small>
                <div class="invalid-feedback">
                    Please enter your Password
                </div>
            </div>
            <div class="form-group form-check">
                <button type="button" id="loginbtn" class="btn btn-success w-100 bg-dark">Login</button>
            </div>
        </form>
    </div>
</div>
<script src="~/js/login.js" type="text/javascript"></script>