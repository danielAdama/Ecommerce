@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/Accounts/_RegisterLayout.cshtml";
}

<div class="register">
    <div class="text-center">
        <h1>Register</h1>
        <hr />
        <form asp-action="Register">
            <div class="text-danger"></div>
            <div class="form-group was-validated">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" required>
                <span class="text-danger"></span>
            </div>

            <div class="form-group was-validated">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" required>
                <span class="text-danger"></span>
            </div>

            <div class="form-group was-validated">
                <label asp-for="EmailAddress" class="control-label">Email Address</label>
                <input asp-for="EmailAddress" class="form-control" required>
                <span class="text-danger"></span>
            </div>

            <div class="form-group was-validated">
                <label asp-for="Password" class="control-label">Password</label>
                <input type="Password" asp-for="Password" class="form-control" required>
                <span class="text-danger"></span>
            </div>

            <div class="form-group was-validated">
                <label asp-for="ConfirmPassword" class="control-label">ConfirmPassword</label>
                <input type="Password" asp-for="ConfirmPassword" class="form-control" required>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="SignUp" class="btn btn-success w-100 bg-dark" />
            </div>
        </form>
    </div>
</div>